RewriteEngine On
RewriteBase /mes/

RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Fallback to index.php for routing (optional, for future router)
# RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]